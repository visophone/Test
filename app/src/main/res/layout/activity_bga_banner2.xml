    android:id="@+id/activity_bga_banner2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.utsoft.cc.test.bgaBanner.BgaBanner2Activity">

    <cn.bingoogolapple.bgabanner.BGABanner
